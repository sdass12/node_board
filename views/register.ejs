<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>회원가입</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
</head>
<body>
<header>
    <%include header.ejs%>
</header>
<h2 class="text-center">회원가입</h2>
<div class="container">
    <div class="col-sm-6 col-md-offset-3">
        <form name="form" action="register" method="post">
            <div class="form-group">
                <label for="inputName">성명</label>
                <input type="text" class="form-control" name="name" placeholder="성명을 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputName">닉네임</label>
                <input type="text" class="form-control" name="nickname" placeholder="닉네임을 입력해 주세요">
                <button class="btn pull-left" style="margin-top:5px;" id="nicknameCheck">닉네임 중복 확인</button>
                <p id="canNickname"></p>
            </div>
            <div class="form-group" style="margin-top: 42px;">
                <label for="InputEmail">이메일 주소</label>
                <input type="email" class="form-control" name="email" placeholder="이메일 주소를 입력해주세요">
                <button class="btn pull-left" style="margin-top:5px;" id="nicknameCheck">이메일 중복 확인</button>
                <p id="canEmail" ></p>
            </div>
            <div class="form-group" style="margin-top: 42px;">
                <label for="inputPassword">비밀번호</label>
                <input type="password" class="form-control" name="password" placeholder="비밀번호를 입력해주세요">
            </div>
            <div class="form-group">
                <label for="inputPasswordCheck">비밀번호 확인</label>
                <input type="password" class="form-control" name="passwordCheck" placeholder="비밀번호 확인을 위해 다시한번 입력 해 주세요">
            </div>

            <div class="form-group text-center">
                <button type="button" onclick="chk();" class="btn btn-primary">
                    회원가입<i class="fa fa-check spaceLeft"></i>
                </button>
                <button type="button" class="btn btn-warning" onclick="history.back();">
                    가입취소<i class="fa fa-times spaceLeft"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function chk(){
        const form = document.form;
        const emailCheck = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i; //이메일 유효성 검사

        if(!form.name.value){
            alert("성명을 입력해주세요.");
            form.name.focus();
        }else if(!form.nickname.value){
            alert("닉네임을 입력해주세요.");
            form.nickname.focus();
        }else if(!form.email.value){
            alert("이메일을 입력해주세요.");
            form.email.focus();
        }else if(!emailCheck.test(form.email.value)){
            alert("이메일 형식을 확인해주세요.");
            form.email.focus();
        }else if(!form.password.value){
            alert("비밀번호를 입력해주세요.");
            form.password.focus();
        }else if(!form.passwordCheck.value){
            alert("비밀번호 확인을 입력해주세요.");
            form.passwordCheck.focus();
        }else if(!(form.passwordCheck.value === form.password.value)){
            alert("비밀번호를 다시 확인해주세요.");
            form.password.focus();
        }else{
            form.submit();
        }
    }

    $(document).ready(function(){
        $('#nicknameCheck').click(function(){
            const nickname = document.form.nickname.value;

            $.ajax({
                url: '/nicknameCheck',
                dataType: 'json',
                type: 'GET',
                data: {data:nickname},
                success: function(result){
                    if(result){
                        $('#canNickname').html(result.result);
                    }
                }
            });
        })

        $('#emailCheck').click(function(){
            const email = document.form.email.value;

            $.ajax({
                url: '/emailCheck',
                dataType: 'json',
                type: 'POST',
                data: {data:email},
                success: function(result){
                    if(result){
                        $('#canEmail').html(result.result);
                    }
                }
            });
        })
    })
</script>
</body>
</html>
